<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <b:Modal title="Представьтесь пожалуйста" closable="false" fade="true" backdrop="STATIC" keyboard="false">
        <b:ModalBody>
            <b:Form ui:field="loginForm">
                <b:Alert type="DANGER" ui:field="alert" visible="false" />
                <b:FormGroup ui:field="loginGroup">
                    <b:FormLabel for="formName">Логин:</b:FormLabel>
                    <b:TextBox text="" ui:field="login"/>
                </b:FormGroup>

                <b:FormGroup ui:field="passwordGroup">
                    <b:FormLabel for="formPassword">Пароль:</b:FormLabel>
                    <b:Input type="PASSWORD" ui:field="password"/>
                </b:FormGroup>

            </b:Form>

        </b:ModalBody>
        <b:ModalFooter>
            <b:Button type="PRIMARY" size="LARGE" ui:field="enter">Войти</b:Button>
            <b:Button type="DANGER" size="LARGE" ui:field="clear">Очистить</b:Button>
        </b:ModalFooter>
    </b:Modal>
</ui:UiBinder>