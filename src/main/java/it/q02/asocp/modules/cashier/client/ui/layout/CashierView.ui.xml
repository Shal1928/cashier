<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

    <ui:with field="res" type="it.q02.asocp.modules.cashier.client.ui.resources.Resources"/>

    <b:FluidContainer addStyleNames="{res.layoutStyle.rootBase}">
        <!--Кепа-->
        <b:Row>
            <b:Column size="MD_12">
                <b:Column size="MD_2">
                    <!--Касса-->
                    <b:Label text="Касса: " addStyleNames="{res.layoutStyle.firstLineLabels}" />
                    <b:Label text="№5" addStyleNames="{res.layoutStyle.firstLineLabels}" />
                </b:Column>
                <b:Column size="MD_2">
                    <!--Чек-->
                    <b:Label text="Чек:" addStyleNames="{res.layoutStyle.firstLineLabels}" />
                    <b:Label text="2028" addStyleNames="{res.layoutStyle.firstLineLabels}" />
                </b:Column>
                <b:Column size="MD_6" />
                <b:Column size="MD_2">
                    <!--Дата и время-->
                    <b:Label text="28.03.2014" addStyleNames="{res.layoutStyle.firstLineLabels}" />
                    <b:Label text="20:15" addStyleNames="{res.layoutStyle.firstLineLabels}" />
                </b:Column>
            </b:Column>
        </b:Row>
        <!--Кепа-->

        <!--Малинка-->
        <b:Row addStyleNames="{res.layoutStyle.secondRow}">
            <b:Column size="MD_5">
                <b:Row>
                    <!--Поиск-->
                    <b:InputGroup>
                        <b:InputGroupAddon icon="SEARCH" />
                        <b:TextBox placeholder="Поиск" autocomplete="false"/>
                    </b:InputGroup>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_5">
                        <b:Row>
                            <!--Список категорий-->
                            <b:ListGroup>
                                <b:ListGroupItem text="Котята на первое">
                                    <b:Badge text="18"/>
                                </b:ListGroupItem>
                                <b:ListGroupItem text="Котята на второе">
                                    <b:Badge text="4"/>
                                </b:ListGroupItem>
                                <b:ListGroupItem text="Котята на десерт">
                                    <b:Badge text="11"/>
                                </b:ListGroupItem>
                                <b:ListGroupItem text="Компоты из котят">
                                    <b:Badge text="5"/>
                                </b:ListGroupItem>
                            </b:ListGroup>
                        </b:Row>
                        <b:Row>
                            <!--Листалка аттракционов-->
                            <b:Pagination>
                                <b:ListItem icon="ARROW_LEFT" />
                                <b:ListItem active="true" text="1" />
                                <b:ListItem active="false" text="2" />
                                <b:ListItem active="false" text="3" />
                                <b:ListItem icon="ARROW_RIGHT" />
                            </b:Pagination>
                        </b:Row>
                    </b:Column>
                </b:Row>
            </b:Column>
            <b:Column size="MD_1" />
            <b:Column size="MD_6">
                <b:Row>
                    <b:Column size="MD_6">
                        <!--Цена-->
                        <b:Label text="544,25" addStyleNames="{res.layoutStyle.jumbotronLabelBase}"/>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_6">
                        <!--Последняя выбранная услуга-->
                        <!--<b:Label text="Услуга:" type="INFO"/>-->
                        <b:InputGroup>
                            <b:InputGroupAddon text="Услуга:" icon="SEARCH" />
                            <b:TextBox placeholder="Котята обжаренные в масле" autocomplete="false"/>
                        </b:InputGroup>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_6">
                        <!--Количество-->
                        <b:InputGroup>
                            <b:InputGroupAddon text="Кол-во:" />
                            <b:TextBox placeholder="4" autocomplete="false"/>
                            <b:InputGroupAddon icon="ASTERISK" />
                        </b:InputGroup>
                    </b:Column>
                    <b:Column size="MD_6">
                        <!--Цена-->
                        <b:InputGroup>
                            <b:InputGroupAddon text="Цена:" />
                            <b:TextBox placeholder="145" autocomplete="false"/>
                            <b:InputGroupAddon icon="RUB" />
                        </b:InputGroup>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_6">
                        <!--Список услуг чека (выбранных)-->
                        <b:DataGrid ui:field="dataGrid" width="100%" height="300px" bordered="false" condensed="false" striped="true" hover="true" pageSize="5">
                        </b:DataGrid>
                    </b:Column>
                </b:Row>
            </b:Column>
        </b:Row>
        <!--Малинка-->

        <!--Подвал-->
        <b:Row>

        </b:Row>
        <!--Подвал-->
    </b:FluidContainer>
</ui:UiBinder>