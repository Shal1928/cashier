<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"

        >


    <b:Modal title="Юр.Лица" closable="true" fade="true" backdrop="STATIC" keyboard="false" >
        <b:ModalBody >
            <b:Row>
                <b:Column size="MD_12">
            <b:CellTable ui:field="legalEntitys" bordered="true" condensed="true" striped="true" hover="true" width="100%" height="200px" ></b:CellTable>
                </b:Column>
            </b:Row>
        </b:ModalBody>
        <b:ModalFooter>
            <b:ButtonToolBar addStyleNames="pull-right">
                <b:ButtonGroup>
                    <b:Button type="SUCCESS" ui:field="createNew" icon="PLUS"></b:Button>
                    <b:Button type="WARNING" ui:field="editRow" icon="EDIT"></b:Button>
                    <b:Button type="DANGER"  ui:field="removeRow" icon="MINUS"></b:Button>
                    <b:Button icon="REFRESH" ui:field="updateTable"></b:Button>
                    <b:Button icon="SAVE" ui:field="saveChanges"></b:Button>
                </b:ButtonGroup>
            </b:ButtonToolBar>
        </b:ModalFooter>
    </b:Modal>

</ui:UiBinder>