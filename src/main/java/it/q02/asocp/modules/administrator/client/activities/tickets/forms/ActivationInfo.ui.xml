<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:style>
        .paddingRight{
            padding-right: 15px;
        }
        .paddingBottom{
            padding-bottom: 5px;
        }

        .padding{
            padding: 5px;
        }


        .addChildPadding  > div[class=row] {

            padding-bottom: 5px;

        }

    </ui:style>
    <b:Column size="MD_6">
        <b:Panel b:id="activationInfo">
            <b:PanelHeader>
                <b:Anchor toggle="COLLAPSE" dataParent="#activationInfo" target="#activationInfoPanel">Реализация
                </b:Anchor>
            </b:PanelHeader>
            <b:PanelCollapse b:id="activationInfoPanel">
                <b:PanelBody addStyleNames="{style.addChildPadding}">
                    <b:Row>
                        <b:Column size="MD_6">
                            <b:TextBox enabled="false" placeholder="Касса"></b:TextBox>
                        </b:Column>
                        <b:Column size="MD_6">
                            <b:TextBox enabled="false" placeholder="Кассир"></b:TextBox>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_6">
                            <b:TextBox enabled="false" placeholder="Дата"></b:TextBox>
                        </b:Column>
                        <b:Column size="MD_3">
                            <b:TextBox enabled="false" placeholder="Продано"></b:TextBox>
                        </b:Column>
                        <b:Column size="MD_3">
                            <b:TextBox enabled="false" placeholder="Осталось"></b:TextBox>
                        </b:Column>
                    </b:Row>

                </b:PanelBody>
            </b:PanelCollapse>
        </b:Panel>
    </b:Column>
</ui:UiBinder>