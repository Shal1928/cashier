        }
        .ActiveStyle > li[class~=active] a:hover{
            color: #2a6496;
        }


    </ui:style>
    <b:Nav addStyleNames="nav-stacked nav-inverted {style.ActiveStyle}">
        <b:ListItem active="true"  >Item 1</b:ListItem>
