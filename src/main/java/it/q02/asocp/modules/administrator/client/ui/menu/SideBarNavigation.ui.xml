<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:style>
        .activeElement > li[class~=active] {
            border-right: 2px solid #428bca;
        }

        .activeElement > li[class~=active] a {
            color: white;
        }

        .activeElement > li[class~=active] a:hover {
            color: #2a6496;
        }


    </ui:style>
    <b:Nav addStyleNames="nav-stacked nav-inverted {style.activeElement}" ui:field="leftBar"/>
</ui:UiBinder>