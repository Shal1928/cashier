<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .paddingRight {
            padding-right: 15px;
        }

        .clear_margins > div[class='form-group'] {
            margin: 0;
            padding: 5px;
        }
    </ui:style>
    <b:Panel>
        <b:PanelBody>
            <b:TabPanel>
                <b:NavTabs>
                    <b:TabListItem active="true" target="#tab7" toggle="TAB" text="Свойства"/>
                    <b:TabListItem enabled="false" toggle="TAB" text="Продажи"/>
                    <b:TabListItem enabled="false" toggle="TAB" text="История"/>
                </b:NavTabs>
                <b:TabContent>
                    <b:TabPane active="true" b:id="editorTab">
                        <b:Form type="HORIZONTAL">
                            <b:FieldSet addStyleNames="{style.clear_margins}">
                                <b:Alert type="DANGER" visible="false" ui:field="errorMessage"/>
                                <b:FormGroup>
                                    <b:FormLabel addStyleNames="col-lg-1">Серия</b:FormLabel>
                                    <g:FlowPanel addStyleNames="col-lg-1">
                                        <b:TextBox ui:field="ticketSeries" enabled="false"
                                                   placeholder="Серия"></b:TextBox>
                                    </g:FlowPanel>
                                    <b:FormLabel addStyleNames="col-lg-2">Номер</b:FormLabel>
                                    <g:FlowPanel addStyleNames="col-lg-2">
                                        <b:TextBox ui:field="ticketNumber" enabled="false"
                                                   placeholder="Номер"></b:TextBox>
                                    </g:FlowPanel>

                                </b:FormGroup>

                                <b:FormGroup>
                                    <b:FormLabel addStyleNames="col-lg-1">Цвет</b:FormLabel>
                                    <g:FlowPanel addStyleNames="col-lg-2">
                                        <b:TextBox ui:field="ticketColor" enabled="false"
                                                   placeholder="Цвет"></b:TextBox>
                                    </g:FlowPanel>
                                    <b:FormLabel addStyleNames="col-lg-1">Количество</b:FormLabel>
                                    <g:FlowPanel addStyleNames="col-lg-2">
                                        <b:TextBox ui:field="ticketCount" enabled="false"
                                                   placeholder="Кол-во билетов"></b:TextBox>
                                    </g:FlowPanel>
                                </b:FormGroup>
                            </b:FieldSet>
                        </b:Form>
                    </b:TabPane>
                </b:TabContent>
            </b:TabPanel>
        </b:PanelBody>
        <b:PanelFooter ui:field="buttonGroup" visible="false">
            <b:Row>
                <b:Column size="MD_1" addStyleNames="pull-right">
                    <b:Button addStyleNames="{style.paddingRight} pull-right" ui:field="cancelButton">Отмена</b:Button>
                </b:Column>
                <b:Column size="MD_1" addStyleNames="pull-right">
                    <b:Button addStyleNames="{style.paddingRight} pull-right" ui:field="saveButton" icon="SAVE">
                        Сохранить
                    </b:Button>
                </b:Column>
            </b:Row>
        </b:PanelFooter>
    </b:Panel>
</ui:UiBinder>