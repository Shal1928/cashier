<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:form="urn:import:it.q02.asocp.modules.administrator.client.activities.tickets.forms"
        >
    <ui:style>
        .paddingRight {
            padding-right: 15px;
        }

        .paddingBottom {
            padding-bottom: 5px;
        }

        .padding {
            padding: 5px;
        }

        .addChildPadding  > div[class=row] {

            padding-bottom: 5px;

        }

    </ui:style>
    <b:Panel addStyleNames="{style.addChildPadding}">

        <b:PanelBody>
            <b:Row addStyleNames="{style.padding}">
                <b:Alert type="DANGER" visible="false" ui:field="errorMessage" addStyleNames="{style.padding}"/>
            </b:Row>
            <b:Row addStyleNames="{style.paddingBottom}">
                <b:Column size="MD_5">
                    <b:TextBox ui:field="ticketBarcode" enabled="false"
                               placeholder="Штрих-код первого билета"></b:TextBox>
                </b:Column>
                <b:Column size="MD_3">
                    <b:TextBox ui:field="ticketColor" enabled="false" placeholder="Цвет"></b:TextBox>
                </b:Column>
            </b:Row>
            <b:Row addStyleNames="{style.paddingBottom}">
                <b:Column size="MD_2">
                    <b:TextBox ui:field="ticketCount" enabled="false" placeholder="Кол-во билетов"></b:TextBox>
                </b:Column>
            </b:Row>
            <b:Row>
                <form:ActivationInfo ui:field="activationInfo"></form:ActivationInfo>
                <form:AdditionalInfo ui:field="additionalInfo"></form:AdditionalInfo>
            </b:Row>

        </b:PanelBody>
        <b:PanelFooter ui:field="buttonGroup" visible="false">
            <b:Row addStyleNames="{style.paddingRight}">
                <b:Button addStyleNames="{style.paddingRight} pull-right" ui:field="cancelButton">Отмена</b:Button>
                <b:Button addStyleNames="{style.paddingRight} pull-right" ui:field="saveButton" icon="SAVE">Сохранить</b:Button>
            </b:Row>
        </b:PanelFooter>
    </b:Panel>
</ui:UiBinder>