<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:l="urn:import:it.q02.asocp.modules.administrator.client.ui.menu"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>


            .blackBG{
                background-color: #222;
            }
            .rightShadow{
                box-shadow: 2px 0px 5px #888888;;
                z-index: 5;
            }

            .moveDown{
               padding-top:50px
            }


            .moveDown12{
                padding-top:12px
            }


    </ui:style>
    <b:FluidContainer>
        <l:MainMenu ui:field="topMenu"></l:MainMenu>
        <b:Row addStyleNames="{style.moveDown}">
            <b:Column size="MD_2"  addStyleNames="{style.blackBG} {style.rightShadow}"  >
                <l:SideBarNavigation ui:field="sideBar"></l:SideBarNavigation>
            </b:Column>
            <b:Column size="MD_10" addStyleNames="{style.moveDown12}" ui:field="container">

            </b:Column>
        </b:Row>
    </b:FluidContainer>
</ui:UiBinder>