<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:ed="urn:import:it.q02.asocp.modules.administrator.client.activities.tickets"
        >

    <ui:style>
        .addPadding{
            padding-top:10px;
            padding-left: 15px;
            padding-right:10px;
        }
    </ui:style>

    <b:Row addStyleNames="{style.addPadding}">
       <ed:TicketEditor ui:field="ticketEditor"></ed:TicketEditor>
       <b:DataGrid ui:field="dataContainer" bordered="true" condensed="true" striped="true" hover="true" width="100%" height="400px" ></b:DataGrid>
    </b:Row>
</ui:UiBinder>