<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
  <display-name>ASofCP</display-name>
    <servlet>
        <servlet-name>it.q02.asocp.modules.security.client.rpc CanHandleUserRoles</servlet-name>
        <servlet-class>it.q02.asocp.modules.security.server.rpc.CanHandleUserRolesImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>it.q02.asocp.modules.administrator.Administrator TicketRollService</servlet-name>
        <servlet-class>it.q02.asocp.modules.administrator.server.rpc.TicketRollServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>it.q02.asocp.modules.security.client.rpc CanHandleUserRoles</servlet-name>
        <url-pattern>security/CanHandleUserRoles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>it.q02.asocp.modules.administrator.Administrator TicketRollService</servlet-name>
        <url-pattern>/administrator/TicketRollService</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

    <filter>
        <filter-name>RequestFilter</filter-name>
        <filter-class>it.q02.asocp.utils.ExecutionContextFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <description>Проводит первоначальную настройку перед стартом приложения</description>
        <listener-class>it.q02.asocp.utils.ContextInitListener</listener-class>
    </listener>

    <security-constraint>
        <display-name>All access</display-name>
        <web-resource-collection>
            <web-resource-name>root index</web-resource-name>
            <url-pattern>/index.jsp</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <display-name>Restricted Zone</display-name>
        <web-resource-collection>
            <web-resource-name>SecurityHandleRoles</web-resource-name>
            <url-pattern>/security/CanHandleUserRoles</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>AUTHENTICATED</role-name>
        </auth-constraint>
    </security-constraint>



    <security-constraint>
        <display-name>Security Module</display-name>
        <web-resource-collection>
            <web-resource-name>SecModule</web-resource-name>
            <url-pattern>/security/*</url-pattern>
        </web-resource-collection>
    </security-constraint>


    <security-constraint>
        <display-name>Restricted Zone</display-name>
        <web-resource-collection>
            <web-resource-name>RestrictedZone</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>AUTHENTICATED</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>default</realm-name>
        <form-login-config>
            <form-login-page>/security/</form-login-page>
            <form-error-page>/security/?error</form-error-page>
        </form-login-config>
    </login-config>

    <resource-ref>
        <res-ref-name>jdbc/MainDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
    </resource-ref>

    <resource-ref>
        <res-ref-name>utils/UserInfo</res-ref-name>
        <res-type>it.q02.asocp.utils.UserInfoProvider</res-type>
    </resource-ref>

    <resource-ref>
        <res-ref-name>utils/DBProvider</res-ref-name>
        <res-type>it.q02.asocp.database.DataBaseProvider</res-type>
    </resource-ref>


</web-app>
