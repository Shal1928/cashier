<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Converters="clr-namespace:ASofCP.Cashier.Converters">
    
    <DataTemplate x:Key="ColorDataTemplate">
        <Rectangle Fill="{Binding Converter={Converters:EngColorNameToBrushConverter}}" 
                   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                   Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}" />
    </DataTemplate>


</ResourceDictionary>