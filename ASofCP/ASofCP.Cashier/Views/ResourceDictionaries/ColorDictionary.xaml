<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MainGray">#ffAAAAAA</Color>
    <Color x:Key="HalfMainGray">#7fAAAAAA</Color>
    <Color x:Key="QuarterMainGray">#3fAAAAAA</Color>

    <Color x:Key="DarkGray">#ff555555</Color>
    <Color x:Key="HalfDarkGray">#7f555555</Color>
    <Color x:Key="QuarterDarkGray">#3f555555</Color>

    <SolidColorBrush x:Key="MainGraySB" Color="{StaticResource MainGray}" />
    <SolidColorBrush x:Key="MainBackgroundSB" Color="#ffFFFFFF" />

    <SolidColorBrush x:Key="DarkGraySB" Color="{StaticResource DarkGray}" />
    
    <LinearGradientBrush x:Key="MainPanelGB" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{StaticResource MainGray}" Offset="-0.1"/>
        <GradientStop Color="{StaticResource QuarterMainGray}" Offset="0.2"/>
        <GradientStop Color="{StaticResource HalfMainGray}" Offset="0.8"/>
        <GradientStop Color="{StaticResource MainGray}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HiglightBackgroundGB" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#00FFFFFF" Offset="0.5"/>
        <GradientStop Color="#44FFFFFF" Offset="0.75"/>
        <GradientStop Color="#ffFFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>